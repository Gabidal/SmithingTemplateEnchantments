{
	"schemaVersion": 1,
	"id": "smithingtemplateenchantments",
	"version": "${version}",
	"name": "Smithing Template Enchantments",
	"description": "Enhances smithing templates by adding enchantments to armor when applying trims. Features configurable enchantments, material-based level scaling, and slot restrictions.",
	"authors": [
		"Gabriel Golzar",
		"Joonas Lehto"
	],
	"contact": {
		"homepage": "https://github.com/Gabidal/SmithingTemplateEnchantments",
		"sources": "https://github.com/Gabidal/SmithingTemplateEnchantments",
		"issues": "https://github.com/Gabidal/SmithingTemplateEnchantments/issues"
	},
	"license": "MIT",
	"icon": "assets/smithingtemplateenchantments/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
			"com.gg.SmithingTemplateEnchantments"
		],
		"client": [
			"com.gg.SmithingTemplateEnchantmentsClient"
		],
		"fabric-datagen": [
			"com.gg.SmithingTemplateEnchantmentsDataGenerator"
		]
	},
	"mixins": [
		"smithingtemplateenchantments.mixins.json",
		{
			"config": "smithingtemplateenchantments.client.mixins.json",
			"environment": "client"
		}
	],
	"depends": {
		"fabricloader": ">=0.18.1",
		"minecraft": "~1.21.8",
		"java": ">=21",
		"fabric-api": "*"
	}
}